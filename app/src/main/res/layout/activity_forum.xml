<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.com.testdata.ForumActivity">
    <include layout="@layout/title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_weight="1">
            <com.facebook.drawee.view.SimpleDraweeView
                app:roundAsCircle="true"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/iv_chongquan"
                app:overlayImage="@mipmap/pettitle"
                android:layout_width="64dp"
                android:layout_height="64dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="宠圈"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                app:roundAsCircle="true"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/iv_help"
                app:overlayImage="@mipmap/help"
                android:layout_width="64dp"
                android:layout_height="64dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="求助问答"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_weight="1">
            <com.facebook.drawee.view.SimpleDraweeView
                app:roundAsCircle="true"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/iv_activity"
                app:overlayImage="@mipmap/activity"
                android:layout_width="64dp"
                android:layout_height="64dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="活动"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                app:roundAsCircle="true"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/iv_aichong"
                app:overlayImage="@mipmap/tips"
                android:layout_width="64dp"
                android:layout_height="64dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="爱宠贴士"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热帖推荐"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorAccent"/>

            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_new"
                android:background="@color/colorAccent" />
            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_new"
                android:background="@color/colorAccent"/>

        </RelativeLayout>

        <com.example.com.testdata.ScrollListView
            android:id="@+id/forumlistview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line"/>
        <TextView
            android:id="@+id/tv_moreluntan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="更多评论"
            android:textSize="20sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray_line"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_pet"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:orientation="horizontal"/>
            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>
    <include layout="@layout/boom"/>

</LinearLayout>
